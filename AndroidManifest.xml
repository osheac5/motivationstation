<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.motivationstation"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
	<uses-permission 
	    android:name= "android.permission.WAKE_LOCK"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.motivationstation.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.motivationstation.Alarm"
            android:label="@string/title_activity_alarm"
            android:parentActivityName="MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.Alarm" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.motivationstation.AlarmRecieverActivity"
            android:label="@string/title_activity_alarm_reciever"
            android:parentActivityName="Alarm" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="Alarm" />
        </activity>
        <activity
            android:name="com.example.motivationstation.RepeatingAlarmReceiverActivity"
            android:label="@string/title_activity_repeating_alarm_receiver" >
        </activity>
    </application>

</manifest>

