<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Alarm" >

    <EditText
        android:id="@+id/YYYYMMDDHHMM"
        android:hint="YYYY/MM/dd HH:mm" 
        android:layout_width="284dp"
        android:layout_height="wrap_content"
        android:inputType="text" />

    <EditText
        android:id="@+id/Alarm"
        android:hint="Alarm Message" 
        android:layout_width="284dp"
        android:layout_height="wrap_content"
        android:inputType="text" />

    <Button
        android:id="@+id/btnSetAlarm1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alarm1" />

   <Button
        android:id="@+id/btnSaveMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Message" />
   
    <Button
        android:id="@+id/btnSetAlarm2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alarm2" />

     <Button
         android:id="@+id/btnStopAlarm"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Stop the Repeating Alarm" />

</LinearLayout>

